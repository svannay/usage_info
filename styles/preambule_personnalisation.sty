\tikzstyle{styleTitreEncadre} = [draw=blue, rounded corners, fill=white, text= black]
\tikzstyle{styleBoiteEncadre} = [draw=blue, fill=blue!5, very thick, rectangle, rounded corners, inner sep=10pt, inner ysep=20pt]

\newcommand{\encadreTitre}{A relever}
\newsavebox{\encadreBoiteCmd}

\NewDocumentEnvironment{encadreBoite1}{o}{%
	\renewcommand{\encadreTitre}{\textbf{#1}}
	\begin{lrbox}{\encadreBoiteCmd}%
		\begin{minipage}[!h]{\linewidth-1cm}
		}%
		{%
		\end{minipage}
	\end{lrbox}
	\begin{center}
		\begin{tikzpicture}
		\node[styleBoiteEncadre] (box){\usebox{\encadreBoiteCmd}};
		\node[styleTitreEncadre, right=10pt] at (box.north west) {\encadreTitre};
		\end{tikzpicture}
	\end{center}
}
\NewDocumentEnvironment{encadreBoite2}{}{%
	\begin{lrbox}{\encadreBoiteCmd}%
		\begin{minipage}[!h]{\linewidth-1cm}
		}%
		{%
		\end{minipage}
	\end{lrbox}
	\begin{center}
		\begin{tikzpicture}
		\node[styleBoiteEncadre] (box){\usebox{\encadreBoiteCmd}};
		\end{tikzpicture}
	\end{center}
}

\NewDocumentCommand{\encadre}{o >{\TrimSpaces}m}{
	\IfValueTF {#1}{
		\begin{encadreBoite1}[#1]
			{#2}
		\end{encadreBoite1}
	}{
		\begin{encadreBoite2}
			{#2}
		\end{encadreBoite2}
	}
}





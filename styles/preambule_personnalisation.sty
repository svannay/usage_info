% Pour les chapitres

\newcommand{\rouages}{\smash{\raisebox{-1ex}{\includegraphics[height=4ex]{styles/images/ruota-dentata-grigia-2-01r}}}}

\newcommand{\chapterFormat}{%
	\titleformat{\chapter}[frame]			% frame pour avoir un cadre
		{\normalfont\normalsize\scshape}	% Format du bandeau
		{Chapitre \arabic{chapter} }		% Texte du bandeau
		{15pt}								% avec frame : esp. vertical autour du titre
		{\LARGE\bfseries\filcenter}[]		% avant la composition du titre
	
	\titleformat{name=\chapter,numberless}[frame]			% variante pour les titres non numérotés
		{\normalfont\normalsize\scshape}	% Format du bandeau
		{\ \rouages \ Ce n'est pas de l'informatique \ \rouages \ }	% Texte du bandeau
		{15pt}								% avec frame : esp. vertical autour du titre
		{\LARGE\bfseries\filcenter}[]		% avant la composition du titre
	
	
	\titlespacing{\chapter}					% régler l'espacement autour du titre de chapitre
		{0pt}								% à gauche
		{-2cm}								% avant
		{15pt}								% après
		[0cm]								% à droite
}
% Pour les annexes
\newcommand{\appendixFormat}{%
	\titleformat{\chapter}[frame]			% frame pour avoir un cadre
		{\normalfont\normalsize\scshape}	% Format du bandeau
		{Annexe \arabic{chapter} }			% Texte du bandeau
		{15pt}								% avec frame : esp. vertical autour du titre
		{\LARGE\bfseries\filcenter}[]		% avant la composition du titre
	
	\titlespacing{\chapter}					% régler l'espacement autour du titre de chapitre
		{0pt}								% à gauche
		{-18pt}								% avant
		{15pt}								% après
		[0cm]								% à droite
}


